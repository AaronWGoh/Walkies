@{
    ViewData["Title"] = "Doggos - Walkies";
}
@model Walkies.Common.Models.AccountUser

<html>
<head>
    <meta charset="utf-8">
    <title>eCommerce template By Adobe Dreamweaver CC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="@Url.Content("~/eCommerceAssets/styles/eCommerceStyle.css")" rel="stylesheet" type="text/css">
    <!--The following script tag downloads a font from the Adobe Edge Web Fonts server for use within the web page. We recommend that you do not modify it.-->
    <script>var __adobewebfontsappname__ = "dreamweaver"</script>
    <script src="https://use.edgefonts.net/montserrat:n4:default;source-sans-pro:n2:default.js" type="text/javascript"></script>
</head>

<body>
    <div id="mainWrapper">
        <header>
            <!-- This is the header content. It contains Logo and links -->

            <div id="headerLinks"><a href="@Url.Content("~/Account/LoginRegister")">Login/Register</a><a href="@Url.Content("~/Account/Profile")">Profile</a></div>
            <a href="@Url.Content("~/Home/Index")">
                <img src="@Url.Content("~Images/TextLogo.png")" width="200" height="164" alt="" />
            </a>
        </header>
        <section id="shelter">
            <!-- The offer section displays a banner text for promotions -->
            <h2>Dogs</h2>
        </section>

        <div id="navbar">
            <ul>
                <li><a href="@Url.Content("~/Home/Index")">Home</a></li>
                <li><a href="@Url.Content("~/Shelter/Index")">Shelter</a></li>
                <li><a href="@Url.Content("~/Map/Index")">Map</a></li>
                <li><a href="@Url.Content("~/Map/DogWalker")">Walker Tracker</a></li>
            </ul>
        </div>

        <div id="content">
            <section class="sidebar">
                <!-- This adds a sidebar with 1 searchbox,2 menusets, each with 4 links -->
                <!--<input type="text"  id="search" value="search">-->
                <div id="menubar">
                    <nav class="menu">
                        <h5>
                            <!-- Title for menuset 1 -->Shelters - Sign up here!
                            <p></p>
                            <input type="button" name="button" value="Sign Up" class="SignUp">
                        </h5>
                        <hr>
                        <h2>Sign Up to Walk</h2>
                        <form method="post" class="form-horizontal">
                            <div class="form-group">
                                <label asp-for="FirstName" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="FirstName" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">User Type</label>
                                <div class="col-md-4">
                                    <select asp-for="UserTypeCode" class="form-control" required asp-items="@(new SelectList(ViewBag.userTypes, "UserTypeCode", "Name"))"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="LoginEmail" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="LoginEmail" class="form-control" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="Password" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="RecoveryPhone" class="control-label col-md-2"></label>
                                <div class="col-md-4">
                                    <input type="tel" asp-for="RecoveryPhone" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <br><br />
                                <button class="btn btn-primary" type="submit"><i class="glyphicon glyphicon-plus"></i> Sign up</button>
                            </div>
                        </form>
                    </nav>

                </div>
            </section>
            <section class="mainContent">
                <div class="productRow">
                    <!-- Each product row contains info of 3 elements -->
                    <article class="productInfo">
                        <!-- Each individual product description -->
                        <div><img alt="sample" src="@Url.Content("~/Images/cutepupper.jpg")"></div>
                        <p class="price">Jamie</p>
                        <p class="productContent"></p>
                        <input type="button" name="button" value="Walk" class="buyButton">
                    </article>
                    <article class="productInfo">
                        <!-- Each individual product description -->
                        <div><img alt="sample" src="@Url.Content("~/Images/Dog.jpg")"></div>
                        <p class="price">Bud</p>
                        <p class="productContent"></p>
                        <input type="button" name="button" value="Walk" class="buyButton">
                    </article>
                    <article class="productInfo">
                        <!-- Each individual product description -->
                        <div><img alt="sample" src="@Url.Content("~/Images/doggyboi.jpg")"></div>
                        <p class="price">Good Boi</p>
                        <p class="productContent"></p>
                        <input type="button" name="button" value="Walk" class="buyButton">
                    </article>
                </div>
            </section>
        </div>
        <footer><a href="@Url.Content("~/Home/Help")">Help</a></footer>
        <!--<footer>
        <!-- This is the footer with default 3 divs -->
        <!--<div>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam varius sem neque. Integer ornare.</p>
          </div>
          <div>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam varius sem neque. Integer ornare.</p>
          </div>
          <div class="footerlinks">
            <p><a href="#" title="Link">Link 1 </a></p>
            <p><a href="#" title="Link">Link 2</a></p>
            <p><a href="#" title="Link">Link 3</a></p>
          </div>
        </footer>-->
    </div>
</body>
</html>
