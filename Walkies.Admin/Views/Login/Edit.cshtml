@model Walkies.Common.Models.AccountUser

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>AccountUser</h4>
<hr />
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post" class="form-horizontal">
                @if (@Model.AccountUserId != Guid.Empty)
                {
                    <input type="hidden" name="shelterId" value="@Model.AccountUserId">
                }
                <div class="form-group">
                    <label asp-for="LoginEmail" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="LoginEmail" class="form-control" required />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label col-md-2"></label>
                    <div class="col-md-4">
                        <input asp-for="PasswordHash" class="form-control" />
                    </div>
                    <div class="form-group">
                        <br><br />
                        <button class="btn btn-primary" type="submit" name="submitAction" value="Login"><i class="glyphicon glyphicon-plus"></i> Login</button>
                    </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
